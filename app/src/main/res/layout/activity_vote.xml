<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="program.com.boreshaafya.vote">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vote for your candidate"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txtview1" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="First Place"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:id="@+id/txtview2"
        android:layout_below="@+id/txtview1"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nominee_spinner"
        android:layout_below="@+id/txtview2"
        android:entries="@array/nominees_list"
        android:paddingLeft="10dp"
        >
    </Spinner>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Second Place"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:id="@+id/txtview3"
        android:layout_below="@+id/nominee_spinner"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nominee_spinner2"
        android:layout_below="@+id/txtview3"
        android:paddingLeft="10dp"
        android:entries="@array/nominees_list"
        >
    </Spinner>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Third Place"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:id="@+id/txtview4"
        android:layout_below="@+id/nominee_spinner2"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nominee_spinner3"
        android:paddingLeft="10dp"
        android:layout_below="@+id/txtview4"
        android:entries="@array/nominees_list"
        >
    </Spinner>

    <Button
        android:layout_width="fill_parent"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="VOTE"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#9EE17E"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"/>


</RelativeLayout>

